# AWS 설정 (실제 값으로 변경하세요)
AWS_ACCOUNT_ID=123456789012
AWS_REGION=ap-northeast-2

# ECR Registry (자동 생성됨)
# ECR_REGISTRY=${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com

# EKS 클러스터 설정
EKS_CLUSTER_NAME=tori-app-cluster
EKS_NODE_TYPE=t3.medium
EKS_NODE_COUNT=3
EKS_NODE_MIN=2
EKS_NODE_MAX=5

# 데이터베이스 비밀번호 (Base64 인코딩 전 원본값)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_MEMBER_PASSWORD=member_pass
MYSQL_PRODUCT_PASSWORD=product_pass
MYSQL_ORDER_PASSWORD=order_pass
MYSQL_INVENTORY_PASSWORD=inventory_pass

# JWT Secret (Base64 인코딩 전 원본값)
JWT_SECRET=your-jwt-secret-key-here

# Mail 설정 (Base64 인코딩 전 원본값)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# OAuth2 설정 (Base64 인코딩 전 원본값)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret